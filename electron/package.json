{
  "name": "Aria2-WebUI-Electron",
  "version": "1.0.0",
  "description": "Aria2-WebUI on Electron",
  "scripts": {
    "dep": "npx pnpm i --no-lockfile",
    "watch": "tsc -w",
    "build": "tsc && npx electron-builder -wl --x64 --arm64",
    "start": "tsc && electron ./dist/main.js"
  },
  "author": "koumaza <koumaza--@outlook.com>",
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/koumaza/webui-aria2-electron.git"
  },
  "build": {
    "appId": "com.webui-aria2.electron.app",
    "directories": {
      "output": "./artifact"
    },
    "nsis": {
      "createStartMenuShortcut": true
    },
    "asar": true,
    "win": {
      "icon": "icon/310x310.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "icon/310x310.png",
      "target": [
        "deb",
        "pacman"
      ],
      "category": "Network"
    }
  },
  "devDependencies": {
    "typescript": "next",
    "asar": "latest",
    "electron": "beta",
    "electron-builder": "next"
  }
}
